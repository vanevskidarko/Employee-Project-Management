{% extends "components/template.njk" %}

{% set direction = "ltr" %}
{% set page_title = "Form Validation" %}
{% set breadcrumb = [
  { text: "Dashboard", link: "ltr/index.html" | url, icon: '<i data-feather="home"></i>' },
  { text: "Form" },
  { text: "Validation", link: "ltr/form/validation.html" | url }
] %}
{% set js_links = [
  "assets/app/form/validation.js" | url
] %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">Validation states</h3>
          </div>
          <div class="portlet-body">

            <!-- BEGIN Form Group -->
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control is-valid" id="exampleInputEmail1" placeholder="Please insert your email">
              <span class="valid-feedback">Valid feedback</span>
              <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group mb-0">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control is-invalid" id="exampleInputPassword1" placeholder="Please insert your password">
              <span class="invalid-feedback">Invalid feedback</small>
            </div>
            <!-- END Form Group -->

          </div>
        </div>
        <!-- END Portlet -->

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">Custom form</h3>
          </div>
          <div class="portlet-body">

            <!-- BEGIN Form Group -->
            <div class="form-group">
              <label for="validationTextarea">Textarea</label>
              <textarea class="form-control is-invalid" id="validationTextarea" placeholder="Required example textarea" required="required"></textarea>
              <div class="invalid-feedback">Please enter a message in the textarea.</div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Custom Checkbox -->
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input is-invalid" id="customControlValidation1" required="required">
                <label class="custom-control-label" for="customControlValidation1">Check this custom checkbox</label>
              </div>
              <!-- END Custom Checkbox -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Custom Radio -->
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input is-valid" id="customControlValidation2" name="radio-stacked" required="required" checked="checked">
                <label class="custom-control-label" for="customControlValidation2">Toggle this custom radio</label>
              </div>
              <!-- END Custom Radio -->

              <!-- BEGIN Custom Radio -->
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input is-valid" id="customControlValidation3" name="radio-stacked" required="required">
                <label class="custom-control-label" for="customControlValidation3">Or toggle this other custom radio</label>
              </div>
              <!-- END Custom Radio -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Custom Switch -->
              <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input is-invalid" id="customSwitchValidation">
                <label class="custom-control-label" for="customSwitchValidation">Toggle this switch element</label>
              </div>
              <!-- END Custom Switch -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Custom Select -->
              <select class="custom-select is-valid" required="required">
                <option value="">Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
              <!-- END Custom Select -->

              <div class="valid-feedback">Example valid custom select feedback</div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Custom File -->
              <div class="custom-file">
                <input type="file" class="custom-file-input is-invalid" id="validatedCustomFile" required="required">
                <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                <div class="invalid-feedback">Example invalid custom file feedback</div>
              </div>
              <!-- END Custom File -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group mb-0">

              <!-- BEGIN Float Label -->
              <div class="float-label">
                <input type="email" class="form-control is-valid" id="floatLabel1" placeholder="Email" value="example@my.com">
                <label for="floatLabel1">Float label</label>
                <div class="valid-feedback">Example valid float label feedback</div>
              </div>
              <!-- END Float Label -->

            </div>
            <!-- END Form Group -->

          </div>
        </div>
        <!-- END Portlet -->

      </div>
      <div class="col-md-6">

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">Input group</h3>
          </div>
          <div class="portlet-body">

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Input Group -->
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">@</span>
                </div>
                <input type="email" class="form-control is-valid" placeholder="Email">
              </div>
              <!-- END Input Group -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Input Group -->
              <div class="input-group">
                <input type="text" class="form-control is-invalid" placeholder="Currency">
                <div class="input-group-append">
                  <span class="input-group-text">
                    <i class="fa fa-dollar-sign"></i>
                  </span>
                </div>
              </div>
              <!-- END Input Group -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group">

              <!-- BEGIN Input Group -->
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fa fa-link"></i>
                  </span>
                </div>
                <input type="text" class="form-control is-valid" placeholder="Link">
                <div class="input-group-append">
                  <span class="input-group-text">.com</span>
                </div>
              </div>
              <!-- END Input Group -->

            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group mb-0">

              <!-- BEGIN Input Group -->
              <div class="input-group input-group-icon">
                <div class="input-group-prepend">
                  <i class="fa fa-map-marker-alt"></i>
                </div>
                <input type="text" class="form-control is-invalid" placeholder="Location">
              </div>
              <!-- END Input Group -->

            </div>
            <!-- END Form Group -->

          </div>
        </div>
        <!-- END Portlet -->

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">JQuery validation</h3>
          </div>
          <div class="portlet-body">
            <p>We use <strong>jQuery Validation</strong> library to support these features. This jQuery plugin makes simple clientside form validation easy, whilst still offering plenty of customization options. Look more references on <a href="http://jqueryvalidation.org">their pages</a>.</p>

            <!-- BEGIN Form -->
            <form id="validate-1">
              <div class="row">
                <div class="col-6">

                  <!-- BEGIN Form Group -->
                  <div class="form-group">
                    <div class="float-label">
                      <input type="text" id="first-name" class="form-control" name="firstName" placeholder="Insert your firstname">
                      <label for="first-name">First name</label>
                    </div>
                  </div>
                  <!-- END Form Group -->

                </div>
                <div class="col-6">

                  <!-- BEGIN Form Group -->
                  <div class="form-group">
                    <div class="float-label">
                      <input type="text" class="form-control" name="lastName" placeholder="Insert your lastname">
                      <label for="last-name">Last name</label>
                    </div>
                  </div>
                  <!-- END Form Group -->

                </div>
              </div>

              <!-- BEGIN Form Group -->
              <div class="form-group">
                <input type="number" class="form-control" name="age" placeholder="Please enter your age">
              </div>
              <!-- END Form Group -->

              <div class="form-group">

                <!-- BEGIN Custom Select -->
                <select class="custom-select" name="gender">
                  <option value="default">Select your gender</option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                </select>
                <!-- END Custom Select -->

              </div>

              <!-- BEGIN Form Group -->
              <div class="form-group">

                <!-- BEGIN Input Group -->
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fa fa-envelope"></i>
                    </div>
                  </div>
                  <input type="email" class="form-control" name="email" placeholder="Please enter your email">
                </div>
                <!-- END Input Group -->

              </div>
              <!-- END Form Group -->

              <!-- BEGIN Form Group -->
              <div class="form-group">

                <!-- BEGIN Input Group -->
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Homepage</span>
                  </div>
                  <input type="text" class="form-control" name="homepage" placeholder="https://example.me">
                </div>
                <!-- END Input Group -->

              </div>
              <!-- END Form Group -->

              <!-- BEGIN Form Group -->
              <div class="form-group">
                <input type="password" class="form-control" name="password1" placeholder="please provide your password">
              </div>
              <!-- END Form Group -->

              <!-- BEGIN Form Group -->
              <div class="form-group">
                <input type="password" class="form-control" name="password2" placeholder="Please insert again your password">
              </div>
              <!-- END Form Group -->

              <!-- BEGIN Form Group -->
              <div class="form-group">

                <!-- BEGIN Custom Checkbox -->
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="agreement" name="agreement">
                  <label class="custom-control-label" for="agreement">Accepts the agreement</label>
                </div>
                <!-- END Custom Checkbox -->

              </div>
              <!-- END Form Group -->

              <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <!-- END Form -->

          </div>
        </div>
        <!-- END Portlet -->

      </div>
    </div>
  </div>
{% endblock %}
