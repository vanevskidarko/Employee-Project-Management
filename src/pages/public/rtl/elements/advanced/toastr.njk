{% extends "components/template.njk" %}

{% set direction = "rtl" %}
{% set page_title = "Toastr" %}
{% set breadcrumb = [
  { text: "Dashboard", link: "rtl/index.html" | url, icon: '<i data-feather="home"></i>' },
  { text: "Elements" },
  { text: "Advanced" },
  { text: "Toastr", link: "rtl/elements/advanced/toastr.html" | url }
] %}
{% set js_links = [
  "assets/app/elements/toastr.js" | url
] %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">Toastr builder</h3>
          </div>
          <div class="portlet-body">
            <div class="row">
              <div class="col-md-4 mb-3 mb-md-0">

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <input id="title" type="text" class="form-control" placeholder="Enter a title ...">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <textarea class="form-control" id="message" rows="3" placeholder="Enter a message ..."></textarea>
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">

                  <!-- BEGIN Custom Checkboxes -->
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="closeButton">
                    <label for="closeButton" class="custom-control-label">Close Button</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="addBehaviorOnToastClick">
                    <label for="addBehaviorOnToastClick" class="custom-control-label">Add behavior on toast click</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="debugInfo">
                    <label for="debugInfo" class="custom-control-label">Debug</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="progressBar">
                    <label for="progressBar" class="custom-control-label">Progress Bar</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="ltr">
                    <label for="ltr" class="custom-control-label">Right-To-Left</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="preventDuplicates">
                    <label for="preventDuplicates" class="custom-control-label">Prevent Duplicates</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="addClear">
                    <label for="addClear" class="custom-control-label">Add button to force clearing a toast, ignoring focus</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1">
                    <input type="checkbox" class="custom-control-input" id="newestOnTop">
                    <label for="newestOnTop" class="custom-control-label">Newest on top</label>
                  </div>
                  <!-- END Custom Checkboxes -->

                </div>
                <!-- END Form Group -->

              </div>
              <div class="col-md-2 mb-3 mb-md-0">
                <h6 class="mb-2">Toast Type</h6>

                <!-- BEGIN Form Group -->
                <div class="form-group" id="toastTypeGroup">

                  <!-- BEGIN Custom Radios -->
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="toasts" value="success" id="success" checked="checked">
                    <label for="success" class="custom-control-label">Success</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="toasts" value="info" id="info">
                    <label for="info" class="custom-control-label">Info</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="toasts" value="warning" id="warning">
                    <label for="warning" class="custom-control-label">Warning</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="toasts" value="error" id="error">
                    <label for="error" class="custom-control-label">Error</label>
                  </div>
                  <!-- END Custom Radios -->

                </div>
                <!-- END Form Group -->

                <h6 class="mb-2">Positions</h6>

                <!-- BEGIN Form Group -->
                <div class="form-group" id="positionGroup">

                  <!-- BEGIN Custom Radios -->
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-top-left" id="toast-top-left" checked="checked">
                    <label for="toast-top-left" class="custom-control-label">Top Right</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-bottom-left" id="toast-bottom-left">
                    <label for="toast-bottom-left" class="custom-control-label">Bottom Right</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-bottom-right" id="toast-bottom-right">
                    <label for="toast-bottom-right" class="custom-control-label">Bottom left</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-top-right" id="toast-top-right">
                    <label for="toast-top-right" class="custom-control-label">Top left</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-top-full-width" id="toast-top-full-width">
                    <label for="toast-top-full-width" class="custom-control-label">Top Full Width</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-bottom-full-width" id="toast-bottom-full-width">
                    <label for="toast-bottom-full-width" class="custom-control-label">Bottom Full Width</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-top-center" id="toast-top-center">
                    <label for="toast-top-center" class="custom-control-label">Top Center</label>
                  </div>
                  <div class="custom-control custom-radio my-1">
                    <input type="radio" class="custom-control-input" name="positions" value="toast-bottom-center" id="toast-bottom-center">
                    <label for="toast-bottom-center" class="custom-control-label">Bottom Center</label>
                  </div>
                  <!-- END Custom Radios -->

                </div>
                <!-- END Form Group -->

              </div>
              <div class="col-md-3 mb-3 mb-md-0">

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="showEasing">Show Easing</label>
                  <input id="showEasing" type="text" class="form-control" placeholder="swing, linear" value="swing">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="hideEasing">Hide Easing</label>
                  <input id="hideEasing" type="text" class="form-control" placeholder="swing, linear" value="linear">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="showMethod">Show Method</label>
                  <input id="showMethod" type="text" class="form-control" placeholder="show, fadeIn, slideDown" value="fadeIn">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="hideMethod">Hide Method</label>
                  <input id="hideMethod" type="text" class="form-control" placeholder="hide, fadeOut, slideUp" value="fadeOut">
                </div>
                <!-- END Form Group -->

              </div>
              <div class="col-md-3">

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="showDuration">Show Duration</label>
                  <input id="showDuration" type="number" class="form-control" placeholder="ms" value="300">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="hideDuration">Hide Duration</label>
                  <input id="hideDuration" type="number" class="form-control" placeholder="ms" value="1000">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="timeOut">Time out</label>
                  <input id="timeOut" type="number" class="form-control" placeholder="ms" value="5000">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <label for="extendedTimeOut">Extended time out</label>
                  <input id="extendedTimeOut" type="number" class="form-control" placeholder="ms" value="1000">
                </div>
                <!-- END Form Group -->

              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <button type="button" class="btn btn-label-primary ml-2" id="showtoast">Show</button>
                <button type="button" class="btn btn-label-primary ml-2" id="cleartoasts">Clear</button>
                <button type="button" class="btn btn-label-primary" id="clearlasttoast">Clear Last</button>
              </div>
            </div>

            <!-- BEGIN Portlet -->
            <div class="portlet mt-3 mb-0">
              <div class="portlet-body">
                <pre id='toastroptions'>output</pre>
              </div>
            </div>
            <!-- END Portlet -->

          </div>
        </div>
        <!-- END Portlet -->

      </div>
    </div>
  </div>
{% endblock %}
