{% extends "components/template.njk" %}

{% set direction = "ltr" %}
{% set page_title = "Bootstrap Maxlength" %}
{% set breadcrumb = [
  { text: "Dashboard", link: "ltr/index.html" | url, icon: '<i data-feather="home"></i>' },
  { text: "Form" },
  { text: "Advanced" },
  { text: "Bootstrap maxlength", link: "ltr/form/advanced/bs-maxlength.html" | url }
] %}
{% set js_links = [
  "assets/app/form/bs-maxlength.js" | url
] %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">

        <!-- BEGIN Portlet -->
        <div class="portlet">
          <div class="portlet-header portlet-header-bordered">
            <h3 class="portlet-title">Bootstrap maxlength</h3>
          </div>
          <div class="portlet-body">
            <p><strong>Bootstrap Maxlength</strong> a visual feedback indicator for the maxlength attribute. <strong>Bootstrap Maxlength</strong> uses a Bootstrap's badge to show a visual feedback to the user about the maximum length of the field where the user is inserting text. Visit <a href="http://mimo84.github.io/bootstrap-maxlength" target="_blank">Bootstrap Maxlength's page</a> to look more examples and references.</p>
            <hr>

            <!-- BEGIN Form Group -->
            <div class="form-group row">
              <label class="col-sm-4 col-lg-3 col-form-label text-muted text-sm-right">Basic demo</label>
              <div class="col-sm-5 col-lg-4">
                <input type="text" class="form-control" id="maxlength-1" maxlength="5" placeholder="Type here...">
              </div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group row">
              <label class="col-sm-4 col-lg-3 col-form-label text-muted text-sm-right">Threshold</label>
              <div class="col-sm-5 col-lg-4">
                <input type="text" class="form-control" id="maxlength-2" maxlength="8" placeholder="Type here...">
              </div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group row">
              <label class="col-sm-4 col-lg-3 col-form-label text-muted text-sm-right">Always show</label>
              <div class="col-sm-5 col-lg-4">
                <input type="text" class="form-control" id="maxlength-3" maxlength="8" placeholder="Type here...">
                <p class="mb-0 mt-2">If the <code>alwaysShow</code> option is enabled, the <code>threshold</code> option is ignored.</p>
              </div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group row">
              <label class="col-sm-4 col-lg-3 col-form-label text-muted text-sm-right">Custom text</label>
              <div class="col-sm-5 col-lg-4">
                <input type="text" class="form-control" id="maxlength-4" maxlength="8" placeholder="Type here...">
                <p class="mb-0 mt-2">Set and combine <code>separator</code>, <code>preText</code> and <code>postText</code> classes to set custom message to the badge.</p>
              </div>
            </div>
            <!-- END Form Group -->

            <!-- BEGIN Form Group -->
            <div class="form-group row mb-0">
              <label class="col-sm-4 col-lg-3 col-form-label text-muted text-sm-right">Positions</label>
              <div class="col-sm-5 col-lg-4">

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <input type="text" class="form-control" id="maxlength-5" maxlength="8" placeholder="Top right">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <input type="text" class="form-control" id="maxlength-6" maxlength="8" placeholder="Bottom right">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group">
                  <input type="text" class="form-control" id="maxlength-7" maxlength="8" placeholder="Top left">
                </div>
                <!-- END Form Group -->

                <!-- BEGIN Form Group -->
                <div class="form-group mb-0">
                  <input type="text" class="form-control" id="maxlength-8" maxlength="8" placeholder="Bottom left">
                </div>
                <!-- END Form Group -->

              </div>
            </div>
            <!-- END Form Group -->

          </div>
        </div>
        <!-- END Portlet -->

      </div>
    </div>
  </div>
{% endblock %}
